
extends common.pug
block content
    link(rel='stylesheet', href='/styles/home.css')
    
    // Modal login

    #ModalLogin.modal.fade
        .modal-dialog.modal-login.modal-lg
            .modal-content
                .modal-header
                    .avatar
                        img(src='https://www.tutorialrepublic.com/examples/images/avatar.png', alt='Avatar')
                    h4.modal-title Member Login
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                p.text-center.errorLogin Please check your email and password.
                .modal-body
                    form(action='/login', method='post')
                        .form-group
                            i.fa.fa-user
                            input.form-control(type='text', name='username', placeholder='Username', required='required')
                        .form-group
                            i.fa.fa-lock
                            input.form-control(type='password', name='password', placeholder='Password', required='required')
                        .form-group
                            button.btn.btn-primary.btn-lg.btn-block.login-btn(type='submit') Login
                .modal-footer
                    a(href='#') Forgot Password?

    // Modal register

    #ModalSignup.modal.fade
        .modal-dialog.modal-login.modal-lg
            .modal-content
                .modal-header
                    .avatar
                        img(src='https://www.tutorialrepublic.com/examples/images/avatar.png', alt='Avatar')
                    h4.modal-title Member Sign Up
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                .modal-body
                    form(action='/signup', method='post')
                        
                        .form-group
                            i.fa.fa-user
                            input.form-control(type='text', name='username', placeholder='Username', required='required')
                        .form-group
                            i.fa.fa-lock
                            input.form-control(type='password', name='password', placeholder='Password', required='required')
                        .form-group
                            i.fa.fa-address-card
                            input.form-control(type='text', name='name', placeholder='Full Name', required='required')
                        .form-group
                            i.fa.fa-envelope
                            input.form-control(type='email', name='email', placeholder='Email', required='required')
                        .form-group
                            i.fa.fa-phone
                            input.form-control(type='phone', name='phone', placeholder='Phone Number', required='required')
                        .form-group
                            button.btn.btn-primary.btn-lg.btn-block.login-btn(type='submit') Sign Up
                




    // navbar
    nav.navbar.navbar-expand-sm.fixed-top.navbar-light.bg-light
        a.navbar-brand(href='/') Elearning
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href='#')
                        | Home 
                        span.sr-only (current)
                li.nav-item
                    a.nav-link(href='#') Link
                li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                        | Dropdown
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href='#') Action
                        a.dropdown-item(href='#') Another action
                        .dropdown-divider
                        a.dropdown-item(href='#') Something else here
            form.form-inline.my-2.my-lg-1
                input.form-control.mr-sm-2(type='search', placeholder='What do you want to learn?', aria-label='Search')
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit')
                    .fa.fa-search
 
        a.cach(href='/login') 
            button.btn.btn-outline-info(type='button') Log In
        a(href='/signup') 
            button.log.btn.btn-success(type='button') Sign Up
            
