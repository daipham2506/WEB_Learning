            h4= num+" Courses in Cart" 
            .row
                .col-lg-9
                    each item in cart
                        .row
                            .col-lg-3
                                img(src=item.linkImg alt="Image course")
                            .col-lg-7
                                b= item.title
                                p= item.description
                            .col-lg-1
                                h4="$"+item.price

                            .col-lg-1
                                a(href="/remove_cart/"+item.courseID )
                                    i.fa.fa-trash
                        
